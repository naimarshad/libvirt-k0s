#cloud-config
hostname: ${hostname}
manage_etc_hosts: true

users:
  - default
  - name: ${ssh_username}
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: users, admin
    ssh_authorized_keys:
%{ for key in ssh_authorized_keys ~}
      - ${key}
%{ endfor ~}

ssh_pwauth: false

package_update: true
packages:
  - qemu-guest-agent

timezone: ${timezone}

runcmd:
  - systemctl enable --now qemu-guest-agent
